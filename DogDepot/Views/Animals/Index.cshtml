@{
  Layout = "_Layout";
}

@using DogDepot.Models;
@model List<DogDepot.Models.Animal>;

<h1>Animals</h1>

@if (@Model.Count == 0)
{
  <h3>No animals need a home at this time!</h3>
}
else
{

  <ul>
  @foreach (Animal animal in Model)
    {
      <li>@Html.ActionLink($"{@animal.Name} | {@animal.Age} | {@animal.Breed} - {@animal.Species.Title}", "Details", new
          {
            id = animal.AnimalId
          })
      </li>
      <p>@Html.ActionLink("Home", "Index", "Home")</p>
    }
  </ul>
}
