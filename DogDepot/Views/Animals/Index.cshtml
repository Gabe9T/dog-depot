@{
  Layout = "_Layout";
}

@using DogDepot.Models;

<h1>Animals</h1>

@if (@Model.Count == 0)
{
  <h3>No amimals need a home at this time!</h3>
}

<ul>
  @foreach (Animal animal in Model)
  {
    <li>@Html.ActionLink($"{@animal.Name} | {@animal.Age} | {@animal.Breed}", "Details", new { id = animal.AnimalId })
    </li>
  }
</ul>
