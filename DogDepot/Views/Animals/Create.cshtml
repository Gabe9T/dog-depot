@{
  Layout = "_Layout";
}

@model DogDepot.Models.Animal

<h4>Check in a new Animal</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  <br />
  @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })
  <br />
  @Html.LabelFor(model => model.Breed)
  <br />
  @Html.TextBoxFor(model => model.Breed, new { placeholder = "Breed" })
  <br />
  @* <!-- @Html.HiddenFor(model => model.Date) --> *@
  @Html.LabelFor(model => model.Age)
  <br />
  @Html.TextBoxFor(model => model.Age, new { placeholder = "Age" })
  <br />
  @Html.LabelFor(model => model.Description)
  <br />
  @Html.TextAreaFor(model => model.Description, new { placeholder = "Enter Your Description Here..." })
  <br />
  <input type="submit" value="Add new animal" />
}

<p>@Html.ActionLink("Show all Animals", "Index")</p>
