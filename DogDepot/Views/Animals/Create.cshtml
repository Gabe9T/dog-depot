@{
  Layout = "_Layout";
}

@model DogDepot.Models.Animal

<h4>Check in a new Animal</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Breed)
  @Html.TextBoxFor(model => model.Breed)
  @Html.LabelFor(model => model.Age)
  @Html.TextBoxFor(model => model.Age)
  @Html.LabelFor(model => model.Date)
  @Html.Hidden("hdnDateTime", @DateTime.Now.ToString())
  @Html.LabelFor(model => model.Description)
  @Html.TextAreaFor(model => model.Description)
  <input type="submit" value="Add new animal" />
}

<p>@Html.ActionLink("Show all Animals", "Index")</p>
